%define service replace_using_package_version

Name:           obs-service-%{service}
Version:        __VERSION__
Release:        0
Summary:        An OBS source service: Update version references in a file
License:        GPL-3.0+
Group:          Development/Tools/Building
Url:            https://github.com/openSUSE/obs-service-%{service}
Source0:        %{service}-%{version}.tar.gz
%if 0%{?suse_version} > 1315
BuildRequires:  python3-flake8
BuildRequires:  python3-setuptools
BuildRequires:  python3-tox
BuildRequires:  python3-pytest-cov
Requires:       python3-docopt
%else
BuildRequires:  python-flake8
BuildRequires:  python-setuptools
BuildRequires:  python-tox
BuildRequires:  python-pytest-cov
Requires:       python-docopt
%endif
BuildRoot:      %{_tmppath}/%{name}-%{version}-build
BuildArch:      noarch

%description
This is a source service for openSUSE Build Service.

Very simple script to set version references of a given file from
an specified package.

%prep
%setup -q -n %{service}-%{version} 

%build
%if 0%{?suse_version} > 1315
# Build Python 3 version
python3 setup.py build
%else
# Build Python 2 version
python2 setup.py build
%endif

%install
%if 0%{?suse_version} > 1315
# Install Python 3 version
python3 setup.py install --install-scripts=%{_prefix}/lib/obs/service \
    --install-lib=%{_prefix}/lib/obs/service \
    --root=%{buildroot} \
%else
# Install Python 2 version
python2 setup.py install --install-scripts=%{_prefix}/lib/obs/service \
    --install-lib=%{_prefix}/lib/obs/service \
    --root=%{buildroot} \
%endif

%files
%defattr(-,root,root)
%dir %{_prefix}/lib/obs
%{_prefix}/lib/obs/service

%changelog
